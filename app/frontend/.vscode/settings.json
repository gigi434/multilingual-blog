{
  "json.schemaDownload.enable": true,
  // ファイル保存時にprettierによる自動フォーマットを実行するか
  "editor.formatOnSave": true,
  // デフォルトのフォーマッタをprettierに設定する
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  // エディターがフォーカスを失うとファイルが自動的に保存される
  "files.autoSave": "onFocusChange",
  // ファイル保存時にESLintによる自動フォーマットを実行するか
  "editor.codeActionsOnSave": {
    "source.fixAll": true,
    "source.fixAll.eslint": true
  },
  /** エラー回避のため導入した
    @see https://github.com/prettier/prettier-vscode/issues/3000#issuecomment-1547290873 */
  "prettier.prettierPath": "./node_modules/prettier",
  "editor.quickSuggestions": {
    "strings": true
  },
  "typescript.tsdk": "node_modules/typescript/lib"
}
